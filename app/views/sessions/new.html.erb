<div class="form-style-6">
  <div class="newPost">
    <div class="formBody">
      <h1 class="formTitle">Log in!</h1>
      <%= form_tag "/sessions", method: :post do %>
          <p>
              <%= label_tag :username %>
              <%= text_field_tag :username %>
          </p>
          <p>
              <%= label_tag :password %>
              <%= password_field_tag :password %>
          </p>
          <p>
              <%= submit_tag "log in" %>
          </p>

      <% end %>
    </div>
  </div>
</div>