<div class="form-style-6"> 

<%= form_for @post, html: { multipart: true } do |f| %>
	<p><%= f.label :title, "Upload an Image" %>
		<%= f.file_field :avatar, required: true %>
	</p>
  <p><%= f.label :title %><br>
      <%= f.text_field :title %>
  </p>

  <p><%= f.label :body %><br>
      <%= f.text_area :body, style:"width: 283px;", rows: 10, col: 50 %>
  </p>

  <p><%= f.submit %></p>
<% end %>

</div>