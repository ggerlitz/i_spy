<%= image_tag @post.avatar.url(:medium) %>
<h1><%= @post.user.username %></h1>
<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<% if current_user != nil %>
	<h3>New Comment</h3>
	<%= form_for [@post, @comment] do |f| %>
	    <%= f.text_area :body %><br>
	    <%= f.submit %>
	<%end%>
<% end %>


<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <p><%= comment.body %></p>
    <hr>
<% end %>